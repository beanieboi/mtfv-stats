<div>Beste Gesamtspieler</div>
<table class="table">
  <thead>
    <tr>
      <th><abbr title="Platz">Pl</abbr></th>
      <th>Name</th>
      <th><abbr title="Leistungsindex">LI</abbr></th>
      <th><abbr title="Spiele">S</abbr></th>
      <th><abbr title="Spiele gewonnen">SP+</abbr></th>
      <th><abbr title="Spiele verloren">SP-</abbr></th>
      <th><abbr title="Quote">Q</abbr></th>
      <th><abbr title="Tore">T</abbr></th>
      <th><abbr title="Gegentoren">GT</abbr></th>
      <th><abbr title="Tordifferenz">TD</abbr></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th><abbr title="Platz">Pl</abbr></th>
      <th>Name</th>
      <th><abbr title="Leistungsindex">LI</abbr></th>
      <th><abbr title="Spiele">S</abbr></th>
      <th><abbr title="Spiele gewonnen">SP+</abbr></th>
      <th><abbr title="Spiele verloren">SP-</abbr></th>
      <th><abbr title="Quote">Q</abbr></th>
      <th><abbr title="Tore">T</abbr></th>
      <th><abbr title="Gegentoren">GT</abbr></th>
      <th><abbr title="Tordifferenz">TD</abbr></th>
    </tr>
  </tfoot>
  <tbody>
    <% local_assigns[:stat].each_with_index do |stat, index| %>
      <tr>
        <th><%= index + 1%></th>
        <th><%= stat.player.name %></th>
        <th><%= stat.overall_performance_index %></th>
        <th><%= stat.overall_total_score %></th>
        <th><%= stat.overall_score %></th>
        <th><%= stat.overall_score_against %></th>
        <th><%= stat.overall_percentage %>%</th>
        <th><%= stat.overall_goals %></th>
        <th><%= stat.overall_goals_against %></th>
        <th><%= stat.overall_goal_difference %></th>
    <% end %>
  </tbody>
</table>
