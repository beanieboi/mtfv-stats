<h1 id="single" class="subtitle">Beste Einzelspieler</h1>
<label class="expandable-table expandable-table--active">
  <input type="checkbox"/>
  <span>anzeigen</span>
  <table class="table is-striped is-fullwidth">
    <thead>
      <tr>
        <th><abbr title="Platz">Pl</abbr></th>
        <th>Name</th>
        <th><abbr title="Leistungsindex">LI</abbr></th>
        <th><abbr title="Spiele">S</abbr></th>
        <th><abbr title="Spiele gewonnen">SP+</abbr></th>
        <th><abbr title="Spiele verloren">SP-</abbr></th>
        <th><abbr title="Quote">Q</abbr></th>
        <th><abbr title="Tore">T</abbr></th>
        <th><abbr title="Gegentoren">GT</abbr></th>
        <th><abbr title="Tordifferenz">TD</abbr></th>
      </tr>
    </thead>
    <tbody>
      <% local_assigns[:stat].each_with_index do |stat, index| %>
        <tr>
          <td><%= index + 1%></td>
          <td><%= link_to(stat.player.name, player_path(stat.player)) %></td>
          <td><%= stat.single_performance_index %></td>
          <td><%= stat.single_total_score %></td>
          <td><%= stat.single_score %></td>
          <td><%= stat.single_score_against %></td>
          <td><%= stat.single_percentage %>%</td>
          <td><%= stat.single_goals %></td>
          <td><%= stat.single_goals_against %></td>
          <td><%= stat.single_goal_difference %></td>
      <% end %>
    </tbody>
  </table>
</label>
