<table class="table">
  <thead>
    <tr>
      <th><abbr title="Platz">Pl</abbr></th>
      <th>Team</th>
      <th><abbr title="Begegnungen">B</abbr></th>
      <th><abbr title="Siege">S</abbr></th>
      <th><abbr title="Unentschieden">U</abbr></th>
      <th><abbr title="Verloren">N</abbr></th>
      <th><abbr title="Tore">T</abbr></th>
      <th><abbr title="Gegentoren">GT</abbr></th>
      <th><abbr title="Tordifferenz">TD</abbr></th>
      <th><abbr title="Spiele gewonnen">SG</abbr></th>
      <th><abbr title="Spiele verlore">SV</abbr></th>
      <th><abbr title="Spieldifferenz">SD</abbr></th>
      <th><abbr title="Punkte">Pkt</abbr></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th><abbr title="Platz">Pl</abbr></th>
      <th>Team</th>
      <th><abbr title="Begegnungen">B</abbr></th>
      <th><abbr title="Siege">S</abbr></th>
      <th><abbr title="Unentschieden">U</abbr></th>
      <th><abbr title="Verloren">N</abbr></th>
      <th><abbr title="Tore">T</abbr></th>
      <th><abbr title="Gegentoren">GT</abbr></th>
      <th><abbr title="Tordifferenz">TD</abbr></th>
      <th><abbr title="Spiele gewonnen">SG</abbr></th>
      <th><abbr title="Spiele verlore">SV</abbr></th>
      <th><abbr title="Spieldifferenz">SD</abbr></th>
      <th><abbr title="Punkte">Pkt</abbr></th>
    </tr>
  </tfoot>
  <tbody>
    <% local_assigns[:teams].each_with_index do |team, index| %>
      <tr>
        <th><%= index + 1%></th>
        <th><%= team.name %></th>
        <th><%= team.matches.count %></th>
        <th><%= team.matches_won %></th>
        <th><%= team.matches_draw %></th>
        <th><%= team.matches_lost %></th>
        <th><%= team.goals %></th>
        <th><%= team.goals_against %></th>
        <th><%= team.goals - team.goals_against %></th>
        <th><%= team.score %></th>
        <th><%= team.score_against %></th>
        <th><%= team.score - team.score_against %></th>
        <th><%= team.points %></th>
    <% end %>
  </tbody>
</table>