<%= form_tag("/", method: "get") do %>
  <div class="field">
    <div class="control">
      <div class="select">
        <%= select_tag "season_id", options_from_collection_for_select(@seasons, "id", "name") %>
      </div>
      <div class="select">
        <%= select_tag "league_id", options_from_collection_for_select(@leagues, "id", "name") %>
      </div>
      <button class="button is-link">Anzeigen</button>
    </div>
  </div>
<% end %>

<%= render partial: "rankings/team", locals: { teams: @teams } %>
<%= render partial: "rankings/overall", locals: { stat: @overall } %>
<%= render partial: "rankings/single", locals: { stat: @singles } %>
<%= render partial: "rankings/double", locals: { stat: @doubles } %>
<%= render partial: "rankings/pair", locals: { stat: @pairs } %>
